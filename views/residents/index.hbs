<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="bi bi-people"></i> Residents
    </h1>
    {{#if isAdmin}}
    <a href="/residents/create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add Resident
    </a>
    {{/if}}
</div>

{{#if residents}}
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Property</th>
                        <th>Monthly Hours</th>
                        <th>Start Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each residents}}
                    <tr>
                        <td>
                            <strong>{{first_name}} {{last_name}}</strong>
                            {{#if email}}<br><small class="text-muted">{{email}}</small>{{/if}}
                        </td>
                        <td>{{property_name}}</td>
                        <td>{{monthly_support_hours}} hours</td>
                        <td>{{formatDate start_date}}</td>
                        <td>
                            {{#if is_active}}
                                <span class="badge bg-success">Active</span>
                            {{else}}
                                <span class="badge bg-secondary">Inactive</span>
                            {{/if}}
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="/residents/{{id}}" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i>
                                </a>
                                {{#if ../isAdmin}}
                                <a href="/residents/{{id}}/edit" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                {{/if}}
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{else}}
<div class="text-center py-5">
    <i class="bi bi-people display-1 text-muted"></i>
    <h3 class="mt-3">No Residents Found</h3>
    <p class="text-muted">There are no residents registered yet.</p>
    {{#if isAdmin}}
    <a href="/residents/create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add First Resident
    </a>
    {{/if}}
</div>
{{/if}}