<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="bi bi-speedometer2"></i> Dashboard
    </h1>
    <div>
        <a href="/sessions/create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> New Session
        </a>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <a href="/residents" class="text-decoration-none">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Total Residents</h6>
                            <h3 class="mb-0">{{stats.total_residents}}</h3>
                        </div>
                        <div>
                            <i class="bi bi-people display-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>
    
    <div class="col-md-3">
        <a href="/support-workers" class="text-decoration-none">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Support Workers</h6>
                            <h3 class="mb-0">{{stats.total_support_workers}}</h3>
                        </div>
                        <div>
                            <i class="bi bi-person-badge display-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>
    
    <div class="col-md-3">
        <a href="/properties" class="text-decoration-none">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Properties</h6>
                            <h3 class="mb-0">{{stats.total_properties}}</h3>
                        </div>
                        <div>
                            <i class="bi bi-building display-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>
    
    <div class="col-md-3">
        <a href="/sessions" class="text-decoration-none">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="card-title">Sessions Today</h6>
                            <h3 class="mb-0">{{stats.sessions_today}}</h3>
                        </div>
                        <div>
                            <i class="bi bi-calendar-day display-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>

<!-- Monthly Overview -->
<div class="row mb-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-calendar-month"></i> This Month's Overview
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="text-center">
                            <h4 class="text-primary">{{stats.sessions_this_month}}</h4>
                            <p class="text-muted mb-0">Sessions</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center">
                            <h4 class="text-success">{{formatDecimal stats.hours_this_month 1}}</h4>
                            <p class="text-muted mb-0">Hours</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center">
                            <h4 class="text-info">{{metrics.utilizationRate}}%</h4>
                            <p class="text-muted mb-0">Utilization</p>
                        </div>
                    </div>
                </div>
                
                <div class="mt-3">
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: {{metrics.utilizationRate}}%">
                            {{metrics.usedMonthlyHours}} / {{metrics.totalMonthlyHours}} hours
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-pie-chart"></i> Sessions by Type
                </h5>
            </div>
            <div class="card-body">
                {{#each sessionsByType}}
                <div class="mb-2">
                    <div class="d-flex justify-content-between">
                        <span>{{supportTypeLabel @key}}</span>
                        <span class="badge" style="background-color: {{supportTypeColor @key}}">{{this}}</span>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

<!-- Today's Sessions -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-calendar-day"></i> Today's Sessions
                </h5>
            </div>
            <div class="card-body">
                {{#if todaySessions}}
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Time</th>
                                <th>Resident</th>
                                <th>Type</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each todaySessions}}
                            <tr>
                                <td>{{formatTime start_time}}</td>
                                <td>{{resident_first_name}} {{resident_last_name}}</td>
                                <td>
                                    <span class="badge" style="background-color: {{supportTypeColor support_type}}">
                                        {{supportTypeLabel support_type}}
                                    </span>
                                </td>
                                <td>
                                    <span class="badge {{#eq status 'completed'}}bg-success{{/eq}}{{#eq status 'planned'}}bg-primary{{/eq}}{{#eq status 'cancelled'}}bg-danger{{/eq}}{{#eq status 'no_show'}}bg-warning{{/eq}}">
                                        {{capitalize status}}
                                    </span>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                {{else}}
                <div class="text-center text-muted">
                    <i class="bi bi-calendar-x display-4"></i>
                    <p>No sessions scheduled for today</p>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-clock-history"></i> Recent Activity
                </h5>
            </div>
            <div class="card-body">
                {{#if recentSessions}}
                <div class="list-group list-group-flush">
                    {{#each recentSessions}}
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">{{resident_first_name}} {{resident_last_name}}</h6>
                            <small class="text-muted">{{formatDate session_date}} - {{supportTypeLabel support_type}}</small>
                        </div>
                        <span class="badge {{#eq status 'completed'}}bg-success{{/eq}}{{#eq status 'planned'}}bg-primary{{/eq}}{{#eq status 'cancelled'}}bg-danger{{/eq}}{{#eq status 'no_show'}}bg-warning{{/eq}}">
                            {{capitalize status}}
                        </span>
                    </div>
                    {{/each}}
                </div>
                {{else}}
                <div class="text-center text-muted">
                    <i class="bi bi-activity display-4"></i>
                    <p>No recent activity</p>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-lightning"></i> Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <a href="/sessions/create" class="btn btn-outline-primary w-100 mb-2">
                            <i class="bi bi-plus-circle"></i><br>
                            New Session
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="/calendar" class="btn btn-outline-success w-100 mb-2">
                            <i class="bi bi-calendar3"></i><br>
                            View Calendar
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="/reports" class="btn btn-outline-info w-100 mb-2">
                            <i class="bi bi-bar-chart"></i><br>
                            View Reports
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="/dashboard/monthly-overview" class="btn btn-outline-warning w-100 mb-2">
                            <i class="bi bi-calendar-month"></i><br>
                            Monthly Overview
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>