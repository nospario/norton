<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="bi bi-bar-chart"></i> Utilization Report
    </h1>
    <div>
        <a href="/reports" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Reports
        </a>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Overall Utilization</h6>
                        <h3 class="mb-0">{{overallUtilization}}%</h3>
                    </div>
                    <div>
                        <i class="bi bi-percent display-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">High Utilization (>80%)</h6>
                        <h3 class="mb-0">{{highUtilizationCount}}</h3>
                    </div>
                    <div>
                        <i class="bi bi-arrow-up-circle display-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h6 class="card-title">Low Utilization (<40%)</h6>
                        <h3 class="mb-0">{{lowUtilizationCount}}</h3>
                    </div>
                    <div>
                        <i class="bi bi-arrow-down-circle display-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Resident Utilization</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Resident</th>
                                <th>Property</th>
                                <th>Allocated Hours</th>
                                <th>Used Hours</th>
                                <th>Utilization</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each residentUtilization}}
                            <tr>
                                <td>
                                    <a href="/residents/{{id}}" class="text-decoration-none">
                                        {{first_name}} {{last_name}}
                                    </a>
                                </td>
                                <td>{{property_name}}</td>
                                <td>{{monthly_support_hours}}h</td>
                                <td>{{hours_used}}h</td>
                                <td>
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar {{#if (gt utilization_percentage 80)}}bg-success{{else if (gt utilization_percentage 40)}}bg-warning{{else}}bg-danger{{/if}}" 
                                             role="progressbar" 
                                             style="width: {{utilization_percentage}}%"
                                             aria-valuenow="{{utilization_percentage}}" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                            {{utilization_percentage}}%
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    {{#if (gt utilization_percentage 80)}}
                                        <span class="badge bg-success">Optimal</span>
                                    {{else if (gt utilization_percentage 60)}}
                                        <span class="badge bg-warning">Good</span>
                                    {{else if (gt utilization_percentage 40)}}
                                        <span class="badge bg-info">Moderate</span>
                                    {{else}}
                                        <span class="badge bg-danger">Low</span>
                                    {{/if}}
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Utilization Distribution</h5>
            </div>
            <div class="card-body">
                <canvas id="utilizationChart" width="300" height="300"></canvas>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h5 class="card-title mb-0">Key Insights</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h6 class="text-success">High Performers</h6>
                    <p class="small text-muted">{{highUtilizationCount}} residents using 80%+ of allocated hours</p>
                </div>
                
                <div class="mb-3">
                    <h6 class="text-warning">Attention Needed</h6>
                    <p class="small text-muted">{{lowUtilizationCount}} residents using less than 40% of allocated hours</p>
                </div>
                
                <div class="mb-3">
                    <h6 class="text-info">Recommendations</h6>
                    <ul class="small text-muted">
                        <li>Review low utilization cases for potential reallocation</li>
                        <li>Consider increasing hours for high utilizers at capacity</li>
                        <li>Investigate barriers to service uptake</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Property Utilization</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Property</th>
                                <th>Capacity</th>
                                <th>Occupancy</th>
                                <th>Hours Utilization</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each propertyUtilization}}
                            <tr>
                                <td>
                                    <a href="/properties/{{id}}" class="text-decoration-none">
                                        {{name}}
                                    </a>
                                </td>
                                <td>{{max_capacity}}</td>
                                <td>
                                    <span class="badge {{#if (gt occupancy_percentage 90)}}bg-danger{{else if (gt occupancy_percentage 75)}}bg-warning{{else}}bg-success{{/if}}">
                                        {{current_residents}}/{{max_capacity}} ({{occupancy_percentage}}%)
                                    </span>
                                </td>
                                <td>{{average_utilization}}%</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Support Worker Utilization</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Support Worker</th>
                                <th>Capacity</th>
                                <th>Hours Worked</th>
                                <th>Utilization</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each workerUtilization}}
                            <tr>
                                <td>
                                    <a href="/support-workers/{{id}}" class="text-decoration-none">
                                        {{first_name}} {{last_name}}
                                    </a>
                                </td>
                                <td>{{max_hours_per_month}}h/month</td>
                                <td>{{hours_worked}}h</td>
                                <td>
                                    <span class="badge {{#if (gt utilization_percentage 85)}}bg-danger{{else if (gt utilization_percentage 70)}}bg-success{{else if (gt utilization_percentage 40)}}bg-warning{{else}}bg-secondary{{/if}}">
                                        {{utilization_percentage}}%
                                    </span>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
// Utilization distribution chart
const ctx = document.getElementById('utilizationChart').getContext('2d');
new Chart(ctx, {
    type: 'pie',
    data: {
        labels: ['High (80%+)', 'Good (60-79%)', 'Moderate (40-59%)', 'Low (<40%)'],
        datasets: [{
            data: [{{highUtilizationCount}}, {{goodUtilizationCount}}, {{moderateUtilizationCount}}, {{lowUtilizationCount}}],
            backgroundColor: ['#198754', '#ffc107', '#0dcaf0', '#dc3545']
        }]
    },
    options: {
        responsive: true,
        plugins: {
            legend: {
                position: 'bottom'
            }
        }
    }
});
</script>