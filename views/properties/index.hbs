<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="bi bi-building"></i> Properties
    </h1>
    {{#if isAdmin}}
    <a href="/properties/create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add Property
    </a>
    {{/if}}
</div>

{{#if properties}}
<div class="row">
    {{#each properties}}
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="card-title mb-0">{{name}}</h5>
            </div>
            <div class="card-body">
                {{#if address}}
                <p class="card-text">
                    <i class="bi bi-geo-alt"></i> {{address}}
                </p>
                {{/if}}
                
                <div class="row text-center">
                    <div class="col-4">
                        <strong>{{current_residents}}</strong>
                        <br><small class="text-muted">Current</small>
                    </div>
                    <div class="col-4">
                        <strong>{{max_capacity}}</strong>
                        <br><small class="text-muted">Capacity</small>
                    </div>
                    <div class="col-4">
                        <strong>{{available_spaces}}</strong>
                        <br><small class="text-muted">Available</small>
                    </div>
                </div>
                
                <div class="progress mt-3">
                    <div class="progress-bar" role="progressbar" 
                         style="width: {{#ifCond current_residents '>' 0}}{{current_residents}}/{{max_capacity}} * 100{{else}}0{{/ifCond}}%">
                    </div>
                </div>
                
                {{#if manager_name}}
                <div class="mt-3">
                    <small class="text-muted">
                        <i class="bi bi-person"></i> Manager: {{manager_name}}
                    </small>
                </div>
                {{/if}}
            </div>
            <div class="card-footer">
                <div class="btn-group w-100" role="group">
                    <a href="/properties/{{id}}" class="btn btn-outline-primary">
                        <i class="bi bi-eye"></i> View
                    </a>
                    {{#if ../isAdmin}}
                    <a href="/properties/{{id}}/edit" class="btn btn-outline-secondary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<div class="text-center py-5">
    <i class="bi bi-building display-1 text-muted"></i>
    <h3 class="mt-3">No Properties Found</h3>
    <p class="text-muted">There are no properties configured yet.</p>
    {{#if isAdmin}}
    <a href="/properties/create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add First Property
    </a>
    {{/if}}
</div>
{{/if}}