<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="bi bi-person-badge"></i> Support Workers
    </h1>
    {{#if isAdmin}}
    <a href="/support-workers/create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add Support Worker
    </a>
    {{/if}}
</div>

{{#if supportWorkers}}
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Contact</th>
                        <th>Specializations</th>
                        <th>Max Hours/Week</th>
                        <th>Max Hours/Month</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each supportWorkers}}
                    <tr>
                        <td>
                            <strong>{{first_name}} {{last_name}}</strong>
                        </td>
                        <td>
                            {{#if email}}<div><i class="bi bi-envelope"></i> {{email}}</div>{{/if}}
                            {{#if phone}}<div><i class="bi bi-phone"></i> {{phone}}</div>{{/if}}
                        </td>
                        <td>
                            {{#each specializations}}
                                <span class="badge me-1" style="background-color: {{supportTypeColor this}}">
                                    {{supportTypeLabel this}}
                                </span>
                            {{/each}}
                        </td>
                        <td>{{max_hours_per_week}} hours</td>
                        <td>{{max_hours_per_month}} hours</td>
                        <td>
                            {{#if is_active}}
                                <span class="badge bg-success">Active</span>
                            {{else}}
                                <span class="badge bg-secondary">Inactive</span>
                            {{/if}}
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="/support-workers/{{id}}" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i>
                                </a>
                                {{#if ../isAdmin}}
                                <a href="/support-workers/{{id}}/edit" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                {{/if}}
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{else}}
<div class="text-center py-5">
    <i class="bi bi-person-badge display-1 text-muted"></i>
    <h3 class="mt-3">No Support Workers Found</h3>
    <p class="text-muted">There are no support workers registered yet.</p>
    {{#if isAdmin}}
    <a href="/support-workers/create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add First Support Worker
    </a>
    {{/if}}
</div>
{{/if}}